#!/usr/bin/env php
<?php

declare(strict_types=1);

use App\Kernel;
use Symfony\Bundle\FrameworkBundle\Console\Application;
use Symfony\Component\Console\Input\ArgvInput;
use Symfony\Component\Console\Output\ConsoleOutput;
use Symfony\Component\Dotenv\Dotenv;

if (!\is_file(\dirname(__DIR__).'/vendor/autoload.php')) {
    throw new RuntimeException('Dependencies not installed. Run "composer install".');
}

require \dirname(__DIR__).'/vendor/autoload.php';

if (\class_exists(Dotenv::class) && \is_file(\dirname(__DIR__).'/.env')) {
    (new Dotenv())->usePutenv()->loadEnv(\dirname(__DIR__).'/.env');
}

$input = new ArgvInput();
$output = new ConsoleOutput();

$kernel = new Kernel($_SERVER['APP_ENV'] ?? 'dev', (bool) ($_SERVER['APP_DEBUG'] ?? ('prod' !== ($_SERVER['APP_ENV'] ?? 'dev'))));

$application = new Application($kernel);
$application->run($input, $output);
